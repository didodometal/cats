<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Xamarin.Clientes.View.CatsDetailsPage"
             BackgroundColor="#A5D6A7"
             Title="Cat Details">
    <ContentPage.Content>
    </ContentPage.Content>
    <ScrollView>
        <StackLayout >

            <Label Text="Image:" FontSize="15" TextColor="#00796B"/>
            <Image Source="{Binding Image}" HeightRequest="240" WidthRequest="240" VerticalOptions="Center" HorizontalOptions="Center" />

            <Label Text="Name:" FontSize="15" TextColor="#00796B"/>
            <Entry Text="{Binding Name}" TextColor="White"/>

            <Label Text="Dólares:" FontSize="15" TextColor="#00796B"/>
            <Entry Text="{Binding Price}" TextColor="White" />

        </StackLayout>
    </ScrollView>
</ContentPage>